---
const year = new Date().getFullYear();

import tmdbLogo from '../../assets/icons/tmdb.svg';
import Letterboxd from '../../assets/icons/letterboxd.svg';
import LinkedIn from '../../assets/icons/linkedIn.svg';
import Youtube from '../../assets/icons/youtube.svg';
---

<dv>
  <footer>
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-center gap-4 my-4">
        <div>
          <a href="https://letterboxd.com/zimmymonkey/" target="_blank"
            ><img class="h-10" src={Letterboxd.src} /></a
          >
        </div>
        <div>
          <a
            href="https://www.youtube.com/channel/UCbkx0mVhp7QUTenGxPpwG8A"
            target="_blank"><img class="h-10" src={Youtube.src} /></a
          >
        </div>
        <div>
          <a
            href="https://www.linkedin.com/in/riley-larson-pro/"
            target="_blank"><img class="h-10" src={LinkedIn.src} /></a
          >
        </div>
      </div>
      <div
        class="flex flex-col flex-row items-center justify-between text-white text-xs space-y-2 space-y-0 space-x-4"
      >
        <!-- Copyright -->
        <div class="text-center text-left">
          &copy; {year} Riley Larson. All rights reserved.
        </div>

        <!-- API Info -->
        <div
          class="flex flex-col flex-row items-center justify-center text-center text-left pt-3"
        >
          <div class="flex items-center">
            <div>This website uses the</div>
            <div>
              <img class="h-2 px-1" src={tmdbLogo.src} alt="TMDb Logo" />
            </div>
            <div>API</div>
          </div>

          <div>but is not endorsed, certified, or otherwise approved by</div>
          <img class="h-2 px-1 mt-1" src={tmdbLogo.src} alt="TMDb Logo" />
        </div>
      </div>
    </div>
  </footer>
</dv>
